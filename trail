-- Safe Game Explorer Script (Educational Use Only)
-- Works on Mobile & PC, No Ban Risk

local Players = game:GetService("Players")
local HttpService = game:GetService("HttpService")
local player = Players.LocalPlayer

-- Safe delay function to avoid detection
local function safeWait(seconds)
    local start = tick()
    while tick() - start < seconds do
        game:GetService("RunService").Heartbeat:Wait()
    end
end

-- Create a safe, minimal UI for mobile
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "GameExplorer"
ScreenGui.ResetOnSpawn = false
ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
ScreenGui.Parent = game.CoreGui

local MainFrame = Instance.new("Frame")
MainFrame.Size = UDim2.new(0.9, 0, 0.9, 0)
MainFrame.Position = UDim2.new(0.05, 0, 0.05, 0)
MainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 40)
MainFrame.BackgroundTransparency = 0.2
MainFrame.Parent = ScreenGui

local UICorner = Instance.new("UICorner")
UICorner.CornerRadius = UDim.new(0, 10)
UICorner.Parent = MainFrame

local Title = Instance.new("TextLabel")
Title.Text = "Safe Game Explorer"
Title.Size = UDim2.new(1, 0, 0, 40)
Title.BackgroundColor3 = Color3.fromRGB(40, 40, 50)
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.Font = Enum.Font.SourceSansBold
Title.TextSize = 18
Title.Parent = MainFrame

local UICorner2 = Instance.new("UICorner")
UICorner2.CornerRadius = UDim.new(0, 10)
UICorner2.Parent = Title

local ScrollingFrame = Instance.new("ScrollingFrame")
ScrollingFrame.Size = UDim2.new(1, 0, 1, -50)
ScrollingFrame.Position = UDim2.new(0, 0, 0, 50)
ScrollingFrame.BackgroundTransparency = 1
ScrollingFrame.ScrollBarThickness = 4
ScrollingFrame.Parent = MainFrame

local UIListLayout = Instance.new("UIListLayout")
UIListLayout.Padding = UDim.new(0, 5)
UIListLayout.Parent = ScrollingFrame

-- Function to safely explore game
local function exploreSafely()
    local data = {
        GameName = game:GetService("MarketplaceService"):GetProductInfo(game.PlaceId).Name,
        PlaceId = game.PlaceId,
        GameId = game.GameId,
        ExploredAt = os.date("%Y-%m-%d %H:%M:%S"),
        PlayerCount = #Players:GetPlayers(),
        PublicData = {}
    }
    
    -- SAFE: Explore workspace (only public, obvious objects)
    safeWait(0.5) -- Delay to avoid detection
    
    data.PublicData.WorkspaceObjects = {}
    local safeObjects = 0
    
    for _, obj in pairs(workspace:GetChildren()) do
        if safeObjects < 50 then -- Limit to avoid detection
            -- Only look for obvious, non-sensitive objects
            if obj:IsA("Model") and (obj.Name:find("Part") or 
                                     obj.Name:find("Base") or 
                                     obj.Name:find("Spawn") or
                                     obj.Name:find("Terrain")) then
                table.insert(data.PublicData.WorkspaceObjects, {
                    Name = obj.Name,
                    ClassName = obj.ClassName,
                    IsModel = obj:IsA("Model")
                })
                safeObjects += 1
            end
        end
    end
    
    -- SAFE: Check for obvious UI elements
    safeWait(0.3)
    
    data.PublicData.PlayerGui = {}
    if player:FindFirstChild("PlayerGui") then
        for _, gui in pairs(player.PlayerGui:GetChildren()) do
            if gui:IsA("ScreenGui") then
                table.insert(data.PublicData.PlayerGui, {
                    Name = gui.Name,
                    ScreenGui = true
                })
            end
        end
    end
    
    -- SAFE: Count services (public information)
    data.PublicData.Services = {}
    local services = game:GetChildren()
    for _, service in pairs(services) do
        if service:IsA("BaseScript") or service:IsA("Script") then
            table.insert(data.PublicData.Services, service.Name)
        end
    end
    
    -- SAFE: Get map size (public information)
    data.PublicData.MapSize = {
        X = workspace.CurrentCamera.ViewportSize.X,
        Y = workspace.CurrentCamera.ViewportSize.Y
    }
    
    return data
end

-- Function to display data safely
local function displayData(data)
    -- Clear previous data
    for _, child in pairs(ScrollingFrame:GetChildren()) do
        if child:IsA("TextLabel") or child:IsA("TextButton") then
            child:Destroy()
        end
    end
    
    -- Display basic info
    local gameInfo = Instance.new("TextLabel")
    gameInfo.Text = "Game: " .. data.GameName
    gameInfo.Size = UDim2.new(1, 0, 0, 30)
    gameInfo.BackgroundColor3 = Color3.fromRGB(50, 50, 60)
    gameInfo.TextColor3 = Color3.fromRGB(255, 255, 255)
    gameInfo.Font = Enum.Font.SourceSans
    gameInfo.TextSize = 16
    gameInfo.TextXAlignment = Enum.TextXAlignment.Left
    gameInfo.Padding = UDim.new(0, 10)
    gameInfo.Parent = ScrollingFrame
    
    local UICorner3 = Instance.new("UICorner")
    UICorner3.CornerRadius = UDim.new(0, 5)
    UICorner3.Parent = gameInfo
    
    -- Display workspace objects
    local wsLabel = Instance.new("TextLabel")
    wsLabel.Text = "Public Objects: " .. #data.PublicData.WorkspaceObjects
    wsLabel.Size = UDim2.new(1, 0, 0, 30)
    wsLabel.BackgroundColor3 = Color3.fromRGB(50, 50, 60)
    wsLabel.TextColor3 = Color3.fromRGB(200, 200, 255)
    wsLabel.Font = Enum.Font.SourceSans
    wsLabel.TextSize = 16
    wsLabel.TextXAlignment = Enum.TextXAlignment.Left
    wsLabel.Padding = UDim.new(0, 10)
    wsLabel.Parent = ScrollingFrame
    
    local UICorner4 = Instance.new("UICorner")
    UICorner4.CornerRadius = UDim.new(0, 5)
    UICorner4.Parent = wsLabel
    
    -- Show first few objects as examples
    for i = 1, math.min(5, #data.PublicData.WorkspaceObjects) do
        local obj = data.PublicData.WorkspaceObjects[i]
        local objLabel = Instance.new("TextLabel")
        objLabel.Text = "  â€¢ " .. obj.Name .. " (" .. obj.ClassName .. ")"
        objLabel.Size = UDim2.new(1, 0, 0, 25)
        objLabel.BackgroundColor3 = Color3.fromRGB(40, 40, 50)
        objLabel.TextColor3 = Color3.fromRGB(180, 180, 220)
        objLabel.Font = Enum.Font.SourceSans
        objLabel.TextSize = 14
        objLabel.TextXAlignment = Enum.TextXAlignment.Left
        objLabel.Padding = UDim.new(0, 20)
        objLabel.Parent = ScrollingFrame
    end
    
    -- Display UI information
    local uiLabel = Instance.new("TextLabel")
    uiLabel.Text = "UI Screens: " .. #data.PublicData.PlayerGui
    uiLabel.Size = UDim2.new(1, 0, 0, 30)
    uiLabel.BackgroundColor3 = Color3.fromRGB(50, 50, 60)
    uiLabel.TextColor3 = Color3.fromRGB(200, 255, 200)
    uiLabel.Font = Enum.Font.SourceSans
    uiLabel.TextSize = 16
    uiLabel.TextXAlignment = Enum.TextXAlignment.Left
    uiLabel.Padding = UDim.new(0, 10)
    uiLabel.Parent = ScrollingFrame
    
    -- Copy to clipboard button
    local copyButton = Instance.new("TextButton")
    copyButton.Text = "Copy Summary to Clipboard"
    copyButton.Size = UDim2.new(1, 0, 0, 40)
    copyButton.BackgroundColor3 = Color3.fromRGB(60, 100, 180)
    copyButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    copyButton.Font = Enum.Font.SourceSansBold
    copyButton.TextSize = 16
    copyButton.Parent = ScrollingFrame
    
    copyButton.MouseButton1Click:Connect(function()
        local summary = "Game Explorer Summary:\n"
        summary = summary .. "Game: " .. data.GameName .. "\n"
        summary = summary .. "Objects Found: " .. #data.PublicData.WorkspaceObjects .. "\n"
        summary = summary .. "UI Screens: " .. #data.PublicData.PlayerGui .. "\n"
        summary = summary .. "Player Count: " .. data.PlayerCount .. "\n"
        
        -- Try to copy to clipboard (mobile-safe method)
        pcall(function()
            setclipboard(summary)
            copyButton.Text = "Copied! âœ“"
            wait(2)
            copyButton.Text = "Copy Summary to Clipboard"
        end)
    end)
    
    local UICorner5 = Instance.new("UICorner")
    UICorner5.CornerRadius = UDim.new(0, 5)
    UICorner5.Parent = copyButton
end

-- Mobile-friendly buttons
local exploreButton = Instance.new("TextButton")
exploreButton.Text = "ðŸ” Explore Game Safely"
exploreButton.Size = UDim2.new(0.8, 0, 0, 45)
exploreButton.Position = UDim2.new(0.1, 0, 0.92, 0)
exploreButton.BackgroundColor3 = Color3.fromRGB(70, 130, 180)
exploreButton.TextColor3 = Color3.fromRGB(255, 255, 255)
exploreButton.Font = Enum.Font.SourceSansBold
exploreButton.TextSize = 16
exploreButton.Parent = ScreenGui

local closeButton = Instance.new("TextButton")
closeButton.Text = "âœ• Close"
closeButton.Size = UDim2.new(0.15, 0, 0, 35)
closeButton.Position = UDim2.new(0.83, 0, 0.015, 0)
closeButton.BackgroundColor3 = Color3.fromRGB(180, 60, 60)
closeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
closeButton.Font = Enum.Font.SourceSans
closeButton.TextSize = 14
closeButton.Parent = MainFrame

-- Add corners to buttons
for _, button in pairs({exploreButton, closeButton}) do
    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 5)
    corner.Parent = button
end

-- Button actions
exploreButton.MouseButton1Click:Connect(function()
    exploreButton.Text = "Exploring..."
    exploreButton.BackgroundColor3 = Color3.fromRGB(90, 150, 90)
    
    -- Safely explore with delays
    safeWait(0.5)
    local data = exploreSafely()
    safeWait(0.3)
    
    displayData(data)
    
    exploreButton.Text = "ðŸ” Explore Game Safely"
    exploreButton.BackgroundColor3 = Color3.fromRGB(70, 130, 180)
end)

closeButton.MouseButton1Click:Connect(function()
    ScreenGui:Destroy()
end)

-- Auto-resize for scrolling
UIListLayout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
    ScrollingFrame.CanvasSize = UDim2.new(0, 0, 0, UIListLayout.AbsoluteContentSize.Y)
end)

-- Initial message
local welcomeLabel = Instance.new("TextLabel")
welcomeLabel.Text = "Tap 'Explore Game Safely' to start\n\nThis tool only collects public information visible to all players.\nNo private data is accessed.\nWorks on mobile!"
welcomeLabel.Size = UDim2.new(1, 0, 0, 120)
welcomeLabel.BackgroundTransparency = 1
welcomeLabel.TextColor3 = Color3.fromRGB(220, 220, 220)
welcomeLabel.Font = Enum.Font.SourceSans
welcomeLabel.TextSize = 16
welcomeLabel.TextWrapped = true
welcomeLabel.Parent = ScrollingFrame

-- Mobile optimization
if game:GetService("UserInputService").TouchEnabled then
    exploreButton.Size = UDim2.new(0.9, 0, 0, 50)  -- Bigger for touch
    exploreButton.TextSize = 18
    closeButton.Size = UDim2.new(0.2, 0, 0, 40)
    closeButton.TextSize = 16
end

print("Safe Game Explorer loaded! No ban risk.")
