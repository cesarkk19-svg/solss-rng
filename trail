-- Function to create buttons
local function CreateButton(text, order, callback)
    local Button = Instance.new("TextButton")
    Button.Size = UDim2.new(1, 0, 0, 50)
    Button.BackgroundColor3 = Color3.fromRGB(194, 3, 38)
    Button.BorderSizePixel = 0
    Button.Text = ""
    Button.AutoButtonColor = false
    Button.LayoutOrder = order
    Button.ZIndex = 2
    Button.Parent = ButtonContainer
    
    local ButtonCorner = Instance.new("UICorner")
    ButtonCorner.CornerRadius = UDim.new(0, 10)
    ButtonCorner.Parent = Button
    
    local ButtonStroke = Instance.new("UIStroke")
    ButtonStroke.Color = Color3.fromRGB(253, 1, 12)
    ButtonStroke.Transparency = 0.5
    ButtonStroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
    ButtonStroke.Parent = Button
    
    local ButtonTitle = Instance.new("TextLabel")
    ButtonTitle.Size = UDim2.new(1, 0, 1, 0)
    ButtonTitle.BackgroundTransparency = 1
    ButtonTitle.Text = text
    ButtonTitle.TextColor3 = Color3.fromRGB(255, 255, 255)
    ButtonTitle.TextScaled = true
    ButtonTitle.Font = Enum.Font.SourceSansBold
    ButtonTitle.Name = "Title"
    ButtonTitle.Parent = Button
    
    local TextSizeConstraint = Instance.new("UITextSizeConstraint")
    TextSizeConstraint.MaxTextSize = 20
    TextSizeConstraint.Parent = ButtonTitle
    
    CreateHoverEffect(Button, true)
    
    if callback then
        Button.MouseButton1Click:Connect(callback)
    end
    
    return Button
end

-- Create buttons
CreateButton("Feature 1", 1, function()
    CreateNotification("Feature 1", "Activated!")
end)

CreateButton("Feature 2", 2, function()
    CreateNotification("Feature 2", "Activated!")
end)

CreateButton("Feature 3", 3, function()
    CreateNotification("Feature 3", "Activated!")
end)

-- Close Button
