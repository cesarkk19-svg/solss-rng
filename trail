CloseButton.BackgroundTransparency = 1
CloseButton.BorderSizePixel = 0
CloseButton.Text = ""
CloseButton.AutoButtonColor = false
CloseButton.ZIndex = 2
CloseButton.Parent = MainFrame

local CloseCorner = Instance.new("UICorner")
CloseCorner.CornerRadius = UDim.new(0, 10)
CloseCorner.Parent = CloseButton

local CloseStroke = Instance.new("UIStroke")
CloseStroke.Color = Color3.fromRGB(253, 1, 12)
CloseStroke.Thickness = 1.25
CloseStroke.Transparency = 0.25
CloseStroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
CloseStroke.Parent = CloseButton

local CloseTitle = Instance.new("TextLabel")
CloseTitle.Size = UDim2.new(1, 0, 1, 0)
CloseTitle.BackgroundTransparency = 1
CloseTitle.Text = "CLOSE"
CloseTitle.TextColor3 = Color3.fromRGB(248, 4, 46)
CloseTitle.TextScaled = true
CloseTitle.Font = Enum.Font.SourceSansSemibold
CloseTitle.Name = "Title"
CloseTitle.Parent = CloseButton

CreateHoverEffect(CloseButton, false)

CloseButton.MouseButton1Click:Connect(function()
    MAIN_GUI:Destroy()
    CreateNotification("Script", "Closed!")
end)

-- Draggable functionality
local UIS = game:GetService("UserInputService")
local dragToggle = nil
local dragSpeed = 0.25
local dragStart = nil
local startPos = nil

local function updateInput(input)
    local delta = input.Position - dragStart
    local position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
    TweenService:Create(MainFrame, TweenInfo.new(dragSpeed, Enum.EasingStyle.Quad), {Position = position}):Play()
end

MainFrame.InputBegan:Connect(function(input)
    if (input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch) then
        dragToggle = true
        dragStart = input.Position
        startPos = MainFrame.Position
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragToggle = false
            end
        end)
    end
end)

UIS.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
        if dragToggle then
            updateInput(input)
        end
    end
end)

-- Add to CoreGui
CoreGuiAdd(MAIN_GUI)

-- Final notification
CreateNotification("Script", "Ready!")
print("Main Hub loaded successfully!")
